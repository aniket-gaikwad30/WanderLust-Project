        <div class="card">
          <img class="card-img-top" src="<%= listing.image %>" style="height:18rem" alt="Image">
          <div class="card-img-overlay">
    
    <p class="card-text">aniket</p>
    
  </div>
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %> </b><br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
</body>
